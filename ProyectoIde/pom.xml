<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.5.5</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>
	<groupId>com.example</groupId>
	<artifactId>ProyectoIde</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>ProyectoIde</name>
	<description>Demo project for Spring Boot</description>
	<url/>
	<licenses>
		<license/>
	</licenses>
	<developers>
		<developer/>
	</developers>
	<scm>
		<connection/>
		<developerConnection/>
		<tag/>
		<url/>
	</scm>
	<repositories>
		<repository>
			<id>project-repo</id>
			<url>file://${project.basedir}/libs</url>
		</repository>
	</repositories>
	<properties>
		<java.version>21</java.version>
		<spring-ai.version>1.0.1</spring-ai.version>
		<baselibs>${project.basedir}</baselibs>
	</properties>
	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.ai</groupId>
			<artifactId>spring-ai-starter-mcp-server-webmvc</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>

		<!--
		<dependency>
			<groupId>biz.ideasoft.o3</groupId>
			<artifactId>o3-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		-->
		<dependency>
			<groupId>biz.ideasoft.o3</groupId>
			<artifactId>o3-thin-client</artifactId>
			<version>7.5.5-SNAPSHOT</version>
			 <scope>system</scope>
			 <systemPath>${baselibs}/libs/o3-thin-client-7.5.5-SNAPSHOT.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>biz.ideasoft.o3</groupId>
			<artifactId>o3-thin-api</artifactId>
			<version>7.5.4-00</version>
			 <scope>system</scope>
			 <systemPath>${baselibs}/libs/o3-thin-api-7.5.4-00.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>jxdbcon</groupId>
			<artifactId>jxdbcon</artifactId>
			<version>0.0.1</version>
			 <scope>system</scope>
			 <systemPath>${baselibs}/libs/jxdbcon-0.0.1.jar</systemPath>
		</dependency>
	</dependencies>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.ai</groupId>
				<artifactId>spring-ai-bom</artifactId>
				<version>${spring-ai.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<includeSystemScope>true</includeSystemScope>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
